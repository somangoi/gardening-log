---
const pathname = Astro.url.pathname;

const navItems = [
  { href: '/posts', label: 'Posts' },
  { href: '/about', label: 'About' },
];
---

<header class="mb-12">
  <nav class="flex items-center justify-between">
    <a href="/" class="text-2xl font-bold text-gray-900 no-underline hover:text-gray-700">
      정원가꾸기
    </a>
    <ul class="flex gap-6 list-none m-0 p-0">
      {navItems.map((item) => (
        <li class="m-0">
          <a
            href={item.href}
            class={`no-underline text-gray-600 hover:text-gray-900 ${
              pathname === item.href || (item.href === '/' && pathname.startsWith('/posts'))
                ? 'font-semibold text-gray-900'
                : ''
            }`}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
